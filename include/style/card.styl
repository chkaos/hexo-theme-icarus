/* ---------------------------------
 *              Card
 * --------------------------------- */
.card
    overflow: hidden
    border-radius: $card-radius
    box-shadow: none

    & + .card, & + .column-right-shadow
        margin-top: 0.75rem

    .card-image
        overflow: hidden
        // border-top-left-radius: $card-radius
        // border-top-right-radius: $card-radius

    .media + .media
        border: none
        margin-top: 0
        padding-top: 0

    // &:hover 
    //     box-shadow: 0 4px 10px rgba(0,0,0,0.05), 0 0 1px rgba(0,0,0,0.1)
    
    .menu-label
        font-size: .8rem
        font-weight: bold

.breadcrumb-wrapper
    margin-bottom .75rem

    .card-content
        padding .75rem
