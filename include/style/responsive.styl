/* ---------------------------------
 *         Responsive Layout
 * --------------------------------- */
+widescreen()
    .is-3-column .container, .is-1-column .container, .is-2-column .container
        max-width: $desktop - 2 * $gap
        width: $desktop - 2 * $gap
    .column-main 
        min-width: 55%

    .column-left
        max-width: 20%

+fullhd()

    .is-3-column .container, .is-1-column .container, .is-2-column .container
        max-width: $widescreen - 2 * $gap
        width: $widescreen - 2 * $gap

+desktop()
    // overwrite navbar collasge
    .navbar > .container {
        display: flex !important; 
    }

+tablet()
    .is-sticky
        position: -webkit-sticky
        position: sticky
        top: 1.5rem
        z-index: 99

    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            top: .75rem
            align-self: flex-start

+mobile()
    .section
        padding: 1.5rem 1rem
    .aplayer 
        display: none

